                </div>
            </div>
        </div>
    </header>
    <main>

    </main>
    <footer>Desarollado por Emiliano Becerra</footer>
    <script>
        let imgs;
        let locationO = "${process.env.APPROUTE}/";

        window.addEventListener("locationchange", () => {
            if (locationO !== location.href) {
                clearInterval(imgs);
            }
            if (locationO === location.href) {
                const img = ["/img/logo/jugueteria1.png", "/img/logo/jugueteria2.png", "/img/logo/jugueteria3.png", "/img/logo/cartel.png"];
                let i = 0;
                imgs = setInterval(() => {
                    document.querySelector("#imgs").setAttribute("src", `${img[i % img.length]}`);
                    i++;
                }, 2000)
            }
        })
    </script>
    <script type="module">
        history.pushState(null, null, {{ url }})
    </script>

</body>

</html>